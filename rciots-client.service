[Unit]
Description=RCIOTS-client NodeJS service
[Service]
StandardOutput=syslog
SyslogIdentifier=rciots-client
Type=forking
Environment=ENV=production
Environment=PATH=/usr/bin:/usr/local/bin
WorkingDirectory=/var/home/edge/rciots/rciots-client-nodejs
ExecStart=/var/home/edge/rciots/rciots-client-nodejs/node_modules/forever/bin/forever --pidFile /var/home/edge/rciots/rciots-client-nodejs/rciots-client.pid start /var/home/edge/rciots/rciots-client-nodejs/forever/forever.json
ExecStop=/var/home/edge/rciots/rciots-client-nodejs/node_modules/forever/bin/forever --pidFile /var/home/edge/rciots/rciots-client-nodejs/rciots-client.pid stop /var/home/edge/rciots/rciots-client-nodejs/forever/forever.json
PIDFile=/var/home/edge/rciots/rciots-client-nodejs/rciots-client.pid
User=root
[Install]
WantedBy=multi-user.target