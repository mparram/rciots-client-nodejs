[Unit]
Description=RCIOTS-client NodeJS service

[Service]
StandardOutput=syslog
SyslogIdentifier=rciots-client
Type=forking
Environment=ENV=production
Environment=PATH=/usr/bin:/usr/local/bin
WorkingDirectory=/var/home/edge/rciots/client
ExecStart=/var/home/edge/rciots/client/node_modules/forever/bin/forever start /var/home/edge/rciots/client/forever/forever.json
ExecStop=/var/home/edge/rciots/client/node_modules/forever/bin/forever stop /var/home/edge/rciots/client/forever/forever.json
PIDFile=/var/run/rciots-client.pid
User=root
[Install]
WantedBy=multi-user.target